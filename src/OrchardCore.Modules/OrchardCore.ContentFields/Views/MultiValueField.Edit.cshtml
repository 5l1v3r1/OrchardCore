@model OrchardCore.ContentFields.ViewModels.EditMultiValueFieldViewModel
@using Newtonsoft.Json

@{
    var settings = Model.PartFieldDefinition.GetSettings<MultiValueFieldSettings>();
    var listSettings = Model.PartFieldDefinition.GetSettings<MultiValueFieldSettings>();
    var culture = await Orchard.GetContentCultureAsync(Model.Field.ContentItem);
    var options = new List<SelectListItem>();
    //var selectedValue = String.IsNullOrEmpty(Model.Text) ? listSettings.DefaultValue : Model.Text;
    var listOptions = string.IsNullOrWhiteSpace(listSettings.Options) ? new MultiValueListValueOption[0] : JsonConvert.DeserializeObject<MultiValueListValueOption[]>(listSettings.Options);

    foreach (var option in listOptions)
    {
        var isSelected = Model.Values.Contains(option.Value);

        options.Add(new SelectListItem { Text = option.Name, Value = option.Value, Selected = isSelected });
    }
}
@if (listSettings.Editor == MultiValueEditorOption.Listbox)
{
    <label asp-for="Values">@Model.PartFieldDefinition.DisplayName()</label>
    <div class="form-group">
        <div class="row col-md-6 col-lg-4">
            <select class="form-control content-preview-select" asp-for="Values" asp-items="options" multiple></select>
        </div>
    </div>
}

@if (listSettings.Editor == MultiValueEditorOption.Checkboxes)
{
    var i = 0;
    <label>@Model.PartFieldDefinition.DisplayName()</label>
    <div class="form-group">
        @foreach (var option in options)
        {
            <div class="custom-control custom-checkbox">
                <input type="checkbox" id="@(Html.IdFor(m => m.Values) + "_" + i)" name="@(Html.NameFor(m => m.Values))" class="custom-control-input" value="@option.Value" @(option.Selected ? "checked='checked'" : "") />
                <label class="custom-control-label" for="@(Html.IdFor(m => m.Values) + "_" + i)">@option.Text</label>
            </div>
            i++;
        }
    </div>
}
@if (!String.IsNullOrEmpty(settings.Hint))
{
    <span class="hint">â€” @settings.Hint</span>
}
