@model OrchardCore.ContentFields.ViewModels.DisplayMultiValueFieldViewModel
@using OrchardCore.Mvc.Utilities
@using Newtonsoft.Json

@{
    var settings = Model.PartFieldDefinition.GetSettings<MultiValueFieldSettings>();
    var listOptions = string.IsNullOrWhiteSpace(settings.Options) ? new MultiValueListValueOption[0] : JsonConvert.DeserializeObject<MultiValueListValueOption[]>(settings.Options);
    var valuesToDisplay = listOptions.Where(o => Model.Values.Contains(o.Value)).Select(o => T[o.Name].Value).ToArray();
}
   
@string.Join(", ", valuesToDisplay)
