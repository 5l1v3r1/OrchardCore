@model dynamic
@inject OrchardCore.ContentManagement.Display.IContentItemDisplayManager ContentItemDisplayManager
@{
    TagBuilder tag = Tag(Model, "li");

    var termContent = await ContentItemDisplayManager.BuildDisplayAsync(Model.Term, Model.BuildDisplayContext.Updater, "Summary", Model.BuildDisplayContext.GroupId);

    tag.InnerHtml.AppendHtml(await DisplayAsync(termContent));
}

@if (Model.Terms.Count > 0)
{
    tag.InnerHtml.AppendHtml("<ul>");

    @foreach (var item in Model.Terms)
    {
        tag.InnerHtml.AppendHtml(await DisplayAsync(await New.TermItem(item)));
    }
    tag.InnerHtml.AppendHtml("</ul>");
}
@tag
